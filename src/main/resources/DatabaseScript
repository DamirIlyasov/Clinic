CREATE TABLE comments
(
    author VARCHAR(30),
    comment VARCHAR(300),
    service VARCHAR(50),
    created_at DATE
);
CREATE TABLE services
(
    id INTEGER PRIMARY KEY NOT NULL,
    name VARCHAR(300),
    cost INTEGER,
    description VARCHAR(500),
    image VARCHAR(100)
);
CREATE TABLE users
(
    id INTEGER PRIMARY KEY NOT NULL,
    firstname VARCHAR(40),
    lastname VARCHAR(40),
    password VARCHAR(30),
    phonenumber VARCHAR(30),
    email VARCHAR(50),
    age VARCHAR(20)
);


